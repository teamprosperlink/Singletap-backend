# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here

# Supabase Configuration (existing)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Qdrant Configuration (existing)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Model Configuration (existing)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================================================
# EXTRACTION MODE CONFIGURATION
# ============================================================================
# Two extraction architectures available:
#
# EXTRACTION_MODE=gpt      (default) GPT-4o-mini only, fast (~5-15s)
# EXTRACTION_MODE=hybrid   GPT + NuExtract validation (~45-60s on CPU)
#
# Optional: Skip NuExtract validation in hybrid mode
# SKIP_NUEXTRACT=1         Run hybrid extractor but skip Level 2 validation
#
# Legacy flag (backward compatible):
# USE_HYBRID_EXTRACTION=1  Same as EXTRACTION_MODE=hybrid
# ============================================================================
EXTRACTION_MODE=gpt
# SKIP_NUEXTRACT=0

# Ollama Configuration (required for hybrid mode)
OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# SIMILAR MATCHING CONFIGURATION
# ============================================================================
# Enable similar matching for near-miss listings in /search-and-match-direct
# When enabled, listings that don't exactly match but are close will be returned
# with similarity scores and smart messages explaining the differences.
#
# ENABLE_SIMILAR_MATCHING=1     Enable similar matching (default: 0/disabled)
# SIMILAR_MATCH_MIN_SCORE=0.70  Minimum similarity score (0.0-1.0)
# SIMILAR_MATCH_MAX_RESULTS=10  Maximum similar listings to return
# ============================================================================
ENABLE_SIMILAR_MATCHING=0
SIMILAR_MATCH_MIN_SCORE=0.70
SIMILAR_MATCH_MAX_RESULTS=10

# ============================================================================
# LLM MESSAGE GENERATION
# ============================================================================
# Uses DistilGPT2 ONNX model for generating smart messages
# Requires model download: python -m matching.download_model
# Falls back to templates if disabled or model not available
# ============================================================================
ENABLE_LLM_MESSAGES=0
